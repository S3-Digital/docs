<script>
  const tiles = document.querySelectorAll('.dash-tile');
  const activeArea = document.getElementById('active-dashboards');
  const emptyMsg = document.getElementById('empty-msg');
  const grid = document.querySelector('.dashboard-grid');

  tiles.forEach(tile => {
    tile.addEventListener('click', (e) => {
      const content = tile.querySelector('.content');
      const isExpanded = content.style.display === 'block';

      if (!isExpanded) {
        content.style.display = 'block';
        activeArea.appendChild(tile);
        emptyMsg.style.display = 'none';
        tile.style.borderColor = '#3b82f6';
      } else {
        content.style.display = 'none';
        grid.appendChild(tile);
        tile.style.borderColor = 'var(--sl-color-hairline)';
        if (activeArea.querySelectorAll('.dash-tile').length === 0) {
            emptyMsg.style.display = 'block';
        }
      }
    });
  });
</script>