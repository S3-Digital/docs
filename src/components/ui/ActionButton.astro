---
interface Props {
    label: string;
    href: string;
    variant?: "primary" | "secondary" | "outline" | "danger";
    icon?: string;
    target?: "_blank" | "_self";
}

const {
    label,
    href,
    variant = "primary",
    icon = "",
    target = "_blank",
} = Astro.props;

const styles = {
    primary: "background: #2563eb; color: white; border: none;",
    secondary: "background: #4b5563; color: white; border: none;",
    outline:
        "background: transparent; color: #2563eb; border: 2px solid #2563eb;",
    danger: "background: #dc2626; color: white; border: none;",
};
---

<a href={href} class="action-btn" target={target} style={styles[variant]}>
    {icon && <span class="icon">{icon}</span>}
    <span class="label">{label}</span>
</a>

<style>
    .action-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 10px 20px;
        border-radius: 6px;
        font-family: sans-serif;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease-in-out;
        cursor: pointer;
        margin: 5px 0;
    }
    .action-btn:hover {
        transform: translateY(-2px);
        opacity: 0.9;
    }
</style>
