---
const { sslStatus, wafBlocked, lastScan } = Astro.props;
---

<div class="security-card">
    <div class="status-header">
        <div
            class={`indicator ${sslStatus === "Active" ? "online" : "offline"}`}
        >
        </div>
        <h3>Bezpiecze≈Ñstwo Witryny</h3>
    </div>

    <div class="security-grid">
        <div class="sec-item">
            <span>Certyfikat SSL</span>
            <strong>{sslStatus}</strong>
        </div>
        <div class="sec-item">
            <span>Ataki zablokowane (24h)</span>
            <strong class="warning">{wafBlocked}</strong>
        </div>
    </div>
    <p class="last-scan">Ostatni skan: {lastScan}</p>
</div>

<style>
    .security-card {
        background: #1a1b1e;
        border: 1px solid #333;
        padding: 20px;
        border-radius: 12px;
    }
    .status-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 20px;
    }
    .indicator {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }
    .online {
        background: #40c057;
        box-shadow: 0 0 10px #40c057;
    }
    .sec-item {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid #2c2e33;
    }
    .sec-item strong {
        color: #fff;
    }
    .warning {
        color: #fab005 !important;
    }
    .last-scan {
        font-size: 0.7rem;
        color: #5c5f66;
        margin-top: 15px;
    }
</style>
