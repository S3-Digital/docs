---
interface Osoba {
    name: string;
    rola: string;
    email: string;
}

interface Props {
    kontakty: Osoba[];
}

const { kontakty = [] } = Astro.props;

const rolaStyle: Record<string, string> = {
    priorytet: "color: #ff4757;",
    codzienny: "color: #2ed573;",
    techniczny: "color: #1e90ff;",
};
---

<div class="contacts-grid">
    {
        kontakty.map((osoba: Osoba) => (
            <div class="contact-card">
                <strong>{osoba.name}</strong>
                <p
                    style={
                        osoba.rola
                            ? rolaStyle[osoba.rola as keyof typeof rolaStyle] ||
                              ""
                            : ""
                    }
                >
                    {osoba.rola}
                </p>
                <a href={`mailto:${osoba.email}`}>{osoba.email}</a>
            </div>
        ))
    }
</div>
