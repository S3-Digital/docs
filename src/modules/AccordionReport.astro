---
const { raporty } = Astro.props;
---

<div class="accordion-container">
    {
        raporty.map((item) => (
            <details class="report-item">
                <summary>
                    <div class="summary-content">
                        <span class="month">{item.miesiac}</span>
                        <span class="brief">
                            Ruch: <strong>{item.ruch.toLocaleString()}</strong>
                        </span>
                        <span class="icon">▼</span>
                    </div>
                </summary>
                <div class="details-content">
                    <div class="stats-grid">
                        <div class="stat-box">
                            <small>Ruch całkowity</small>
                            <p>{item.ruch.toLocaleString()}</p>
                        </div>
                        <div class="stat-box">
                            <small>Konwersje</small>
                            <p>{item.konwersje}</p>
                        </div>
                    </div>
                    <div class="note-box">
                        <h4>Analiza ekspercka:</h4>
                        <p>{item.notatka}</p>
                    </div>
                </div>
            </details>
        ))
    }
</div>

<style>
    .accordion-container {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin: 20px 0;
    }
    .report-item {
        background: #1a1b1e;
        border: 1px solid #333;
        border-radius: 8px;
        overflow: hidden;
        transition: 0.3s;
    }
    .report-item[open] {
        border-color: #3b82f6;
    }

    summary {
        list-style: none;
        padding: 15px 20px;
        cursor: pointer;
        background: #25262b;
        transition: background 0.2s;
    }
    summary:hover {
        background: #2c2e33;
    }
    summary::-webkit-details-marker {
        display: none;
    }

    .summary-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .month {
        font-weight: bold;
        font-size: 1.1rem;
        color: #fff;
    }
    .brief {
        color: #909296;
        font-size: 0.9rem;
    }
    .icon {
        font-size: 0.8rem;
        color: #3b82f6;
        transition: 0.3s;
    }
    .report-item[open] .icon {
        transform: rotate(180deg);
    }

    .details-content {
        padding: 20px;
        background: #1a1b1e;
        border-top: 1px solid #333;
    }
    .stats-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-bottom: 20px;
    }
    .stat-box {
        background: #25262b;
        padding: 10px 15px;
        border-radius: 6px;
    }
    .stat-box small {
        color: #909296;
        font-size: 0.75rem;
        text-transform: uppercase;
    }
    .stat-box p {
        font-size: 1.5rem;
        font-weight: bold;
        margin: 5px 0 0 0;
        color: #3b82f6;
    }

    .note-box h4 {
        margin: 0 0 10px 0;
        font-size: 0.9rem;
        color: #fff;
    }
    .note-box p {
        margin: 0;
        color: #c1c2c5;
        line-height: 1.6;
        font-size: 0.95rem;
    }
</style>
