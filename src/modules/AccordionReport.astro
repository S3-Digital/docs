---
// Definiujemy typy, żeby TypeScript był zadowolony
interface Item {
    title: string;
    content: string;
}

interface Props {
    items?: Item[];
}

const { items = [] } = Astro.props;
---

<div class="s-accordion-container">
    {
        items.map((item: Item) => (
            <details class="s-accordion-item">
                <summary class="s-accordion-summary">
                    <span>{item.title}</span>
                    <span class="icon">↓</span>
                </summary>
                <div class="s-accordion-content">{item.content}</div>
            </details>
        ))
    }
</div>

<style>
    /* Tutaj zachowaj swoje style z działającej wersji */
    .s-accordion-summary {
        cursor: pointer;
        padding: 10px;
        background: #1a1a1a;
        margin-top: 5px;
        border-radius: 4px;
    }
</style>
